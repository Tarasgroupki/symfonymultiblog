{% extends 'admin.html.twig' %}

{% block body %}
    <h1>Category</h1>

    <table>
        <tbody>
            <tr>
                <th>Cat_id</th>
                <td>{{ category.cat_id }}</td>
            </tr>
            <tr>
                <th>Cat_name</th>
                <td>{{ category.catname }}</td>
            </tr>
            <tr>
                <th>Locale</th>
                <td>{{ category.locale }}</td>
            </tr>
            <tr>
                <th>Description_cat</th>
                <td>{{ category.descriptioncat }}</td>
            </tr>
            <tr>
                <th>Created</th>
                <td>{% if category.created %}{{ category.created|date('Y-m-d') }}{% endif %}</td>
            </tr>
        </tbody>
    </table>

    <ul>
        <li>
            <a href="{{ path('admin_category_index') }}">Back to the list</a>
        </li>
        <li>
            <a href="{{ path('admin_category_edit', { 'cat_id': category.cat_id }) }}">Edit</a>
        </li>
        <li>
            {{ form_start(delete_form) }}
                <input type="submit" value="Delete">
            {{ form_end(delete_form) }}
        </li>
    </ul>
{% endblock %}
