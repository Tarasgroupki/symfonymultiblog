{% extends "::base.html.twig"%}

{% block title %}Acme\Bundle\UserBundle:register{% endblock %}

{% block body %}

<div class="panel panel-success">
   <div class="panel-heading">
    <h3>{{ 'translate.register'|trans }}</h3>
   </div>
   <div class="panel-body">
{{ form_start(form) }}
<div class="form-group">
    {{ form_row(form.username) }}
</div>
<div class="form-group">
    {{ form_row(form.email) }}
</div>
<div class="form-group">
    {{ form_row(form.plainPassword.first) }}
</div>
<div class="form-group">
	{{ form_row(form.plainPassword.second) }}
</div>
    <button class="btn btn-info pull-right" type="submit">Register!</button>
{{ form_end(form) }}
</div>

</div>

{% endblock %}